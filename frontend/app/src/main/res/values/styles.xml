

<?xml version="1.0" encoding="utf-8"?>
<resources>
  
   <style name="Widget.LearnIzone.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">?attr/colorSurface</item>
        <item name="boxStrokeColor">?attr/colorPrimary</item>
        <item name="hintTextAppearance">@style/TextAppearance.App.TextInputHint</item>
    </style>

    <!-- Style pour le bouton -->
    <style name="Widget.LearnIzone.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- Optionnel : style de texte pour hint -->
    <style name="TextAppearance.App.TextInputHint" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">#9E9E9E</item>
    </style>

    <style name="RoundedBoxShape" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>

        <item name="cornerSize">10dp</item>
    </style>
    <style name="CustomButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@null</item>
        <item name="backgroundTint">@null</item>
        <item name="android:backgroundTintMode">src_over</item>
        <item name="android:stateListAnimator">@null</item> <!-- Disable Material elevation animations -->
    </style>

</resources>

